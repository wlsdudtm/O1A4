<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
					"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lg.team3.partyMember">
	<resultMap type="com.lg.team3.model.PartyMemberModel" id="partyMemberModel">
		<result column="_id" property="id" />
		<result column="member_id" property="memberId" />
		<result column="party_id" property="partyId" />
	</resultMap>

	<resultMap type="com.lg.team3.model.PartyModel" id="partyModel">
		<result column="_id" property="id" />
		<result column="title" property="title" />
		<result column="from_year" property="fromYear" />
		<result column="to_year" property="toYear" />
		<result column="from_month" property="fromMonth" />
		<result column="to_month" property="toMonth" />
		<result column="from_day" property="fromDay" />
		<result column="to_day" property="toDay" />
		<result column="from_hour" property="fromHour" />
		<result column="to_hour" property="toHour" />
		<result column="master_id" property="masterId" />
		<result column="is_progress" property="isProgress" />
		<collection column="_id" property="memberList" select="getPartyMember"/>
	</resultMap>

	<resultMap type="com.lg.team3.model.MemberModel" id="memberModel">
		<result column="_id" property="id" />
		<result column="phone_no" property="phoneNo" />
		<result column="pwd" property="pwd" />
		<result column="name" property="name" />
	</resultMap>

	<sql id="PartyMember_Column_List">
		member_id, party_id
	</sql>

	<insert id="addPartyMember" parameterType="com.lg.team3.model.PartyMemberModel">
		insert into party_member(
		<include refid="PartyMember_Column_List" />
		)
		VALUES(
		#{memberId}, #{partyId}
		)
	</insert>
	
	<delete id="deletePartyMember" parameterType="com.lg.team3.model.PartyMemberModel">
		delete from party_member where member_id = #{memberId} and party_id = #{partyId}
	</delete>
	
	<select id="getMyParty" parameterType="int" resultMap="partyMemberModel">
		select * from party_member where member_id=#{value}
	</select>
	
	<select id="getPartyMember" resultMap="memberModel">
		select m._id, m.phone_no, m.pwd, m.name from party_member pm, member m where pm.member_id=m._id and pm.party_id=#{party_id}
	</select>
	
	<select id="getMyPartyInfo" parameterType="int" resultMap="partyModel">
		select * from party where _id=#{value}
	</select>
</mapper>