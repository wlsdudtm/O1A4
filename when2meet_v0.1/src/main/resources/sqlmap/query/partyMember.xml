<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
					"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lg.team3.partyMember">
	<resultMap type="com.lg.team3.model.PartyMemberModel" id="partyMemberModel">
		<result column="_id" property="id" />
		<result column="member_id" property="memberId" />
		<result column="party_id" property="partyId" />
		<collection column="" property="partyInfo" select="get" />
	</resultMap>

	<resultMap type="com.lg.team3.model.PartyInfoModel" id="partyInfoModel">
		<result column="_id" property="partyId" />
		<result column="title" property="title" />
		<result column="is_progress" property="isProgress" />
		<collection column="_id" property="memberList" select="getPartyMember"/>
	</resultMap>

	<sql id="PartyMember_Column_List">
		member_id, party_id
	</sql>

	<insert id="addPartyMember" parameterType="com.lg.team3.model.PartyMemberModel">
		insert into party_member(
		<include refid="PartyMember_Column_List" />
		)
		VALUES(
		#{memberId}, #{partyId}
		)
	</insert>
	
	<select id="getMyParty" parameterType="int" resultMap="partyMemberModel">
		select * from party_member where member_id=#{value}
	</select>
	
	<select id="getPartyMember" resultMap="partyMemberModel">
		select * from party_member where party_id=#{party_id}
	</select>
	
	<select id="getMyPartyInfo" parameterType="int" resultMap="partyInfoModel">
		select * from party where _id=#{value}
	</select>
</mapper>