<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
					"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
					
<mapper namespace="com.lg.team3.member">
	<resultMap type="com.lg.team3.model.MemberModel" id="memberModel">
		<result column="_id" property="id" />
		<result column="phone_no" property="phoneNo" />
		<result column="pwd" property="pwd" />
		<result column="name" property="name" />
	</resultMap>
	
	<sql id="Base_Column_List">
	   phone_no, pwd, name
	</sql>
	
	<insert id="addMember" parameterType="com.lg.team3.model.MemberModel">
		insert into member(
		<include refid="Base_Column_List"/>
		)		 
		VALUES(
			#{phoneNo}, #{pwd}, #{name}
		)
	</insert>
	
	<select id="checkJoin" resultType="int" parameterType="com.lg.team3.model.MemberModel">
		select count(1) from member where phone_no = #{phoneNo}
	</select>

</mapper>